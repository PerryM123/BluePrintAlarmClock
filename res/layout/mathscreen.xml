<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:gravity="center_horizontal" >

    <Button
        android:id="@+id/btn_snooze_math"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:text="Solve to STOP" />

    <TextView
        android:id="@+id/tv_math_prob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="MATH ALARM!!!!!"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/math_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_snooze_math"
        android:layout_alignLeft="@+id/btn_snooze_math"
        android:layout_alignRight="@+id/btn_snooze_math"
        android:layout_marginBottom="58dp"
        android:inputType="phone" />

</RelativeLayout>